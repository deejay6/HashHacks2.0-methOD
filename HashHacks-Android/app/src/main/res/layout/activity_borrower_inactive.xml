<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.method.hashhacks_android.activities.BorrowerInactiveActivity">

    <EditText
        android:id="@+id/et_inactive_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount" />

    <EditText
        android:id="@+id/et_inactive_purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Purpose" />

    <EditText
        android:id="@+id/et_inactive_tenure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tenure" />

    <Button
        android:id="@+id/btn_inactive_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>
