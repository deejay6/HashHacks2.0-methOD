<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Credit Rating"
        android:textSize="50sp" />

    <LinearLayout
        android:weightSum="12"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.36">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardElevation="10dp"
            android:layout_weight="3"
            app:cardPreventCornerOverlap="true">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="₹ 5000"
                    android:textSize="35sp" />

                <TextView

                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_profile_five_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/five"
                    android:layout_marginRight="50dp"
                    android:textSize="30sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_five_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/five"
                    android:layout_marginLeft="50dp"
                    android:textSize="30sp" />


            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="3"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="₹ 10000"
                    android:textSize="35sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_ten_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ten"
                    android:layout_marginRight="50dp"
                    android:textSize="30sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_ten_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ten"
                    android:layout_marginLeft="50dp"
                    android:textSize="30sp" />


            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardElevation="10dp"
            android:layout_weight="3"
            app:cardPreventCornerOverlap="true">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/twenty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="₹ 20000"
                    android:textSize="35sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_twenty_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/twenty"
                    android:layout_marginRight="50dp"
                    android:textSize="30sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_twenty_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/twenty"
                    android:layout_marginLeft="50dp"
                    android:textSize="30sp" />


            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardElevation="10dp"
            android:layout_weight="3"
            app:cardPreventCornerOverlap="true">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/greater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="> ₹ 20000"
                    android:textSize="35sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_greater_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/greater"
                    android:layout_marginRight="50dp"
                    android:textSize="30sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_profile_greater_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/greater"
                    android:layout_marginLeft="50dp"
                    android:textSize="30sp" />


            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>