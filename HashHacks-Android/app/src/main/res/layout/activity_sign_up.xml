<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.method.hashhacks_android.activities.SignUpActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_signup_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Name" />

        <EditText
            android:id="@+id/et_signup_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_signup_confirm_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_signup_aadhar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Aadhar" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_signup_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Male" />

            <RadioButton
                android:id="@+id/rb_signup_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Female" />
        </RadioGroup>


        <EditText
            android:id="@+id/et_signup_addresss"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Address" />


        <EditText
            android:id="@+id/et_signup_mobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Mobile"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_signup_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Date of Birth"
            android:inputType="date" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_signup_borrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/borrower" />

            <RadioButton
                android:id="@+id/rb_signup_lender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/lender" />

        </RadioGroup>

        <EditText
            android:id="@+id/et_signup_facebook"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Facebook handle" />

        <EditText
            android:id="@+id/et_signup_twitter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Twitter handle" />


        <Button
            android:id="@+id/btn_signup_enter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sign Up!" />

    </LinearLayout>
</ScrollView>
