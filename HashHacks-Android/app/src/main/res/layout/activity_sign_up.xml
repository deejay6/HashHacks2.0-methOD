<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.method.hashhacks_android.SignUpActivity">

    <EditText
        android:hint="Name"
        android:id="@+id/et_signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Aadhar"
        android:id="@+id/et_signup_aadhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:text="Male"
        android:id="@+id/rb_signup_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:text="Female"
        android:id="@+id/rb_signup_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Address"
        android:id="@+id/et_signup_addresss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:id="@+id/et_signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="DOB"
        android:inputType="date"
        android:id="@+id/et_signup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/rb_signup_borrower"
        android:text="@string/borrower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/rb_signup_lender"
        android:text="@string/lender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Sign Up!"
        android:id="@+id/btn_signup_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
